# Server
PORT=10000

# Database
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.pcfepje.mongodb.net/microcourse?retryWrites=true&w=majority&appName=Cluster0

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Cloudinary
CLOUDINARY_CLOUD=your_cloud_name
CLOUDINARY_KEY=your_cloudinary_key
CLOUDINARY_SECRET=your_cloudinary_secret

# Email
EMAIL_HOST=smtp.mail.yahoo.com
EMAIL_PORT=465
EMAIL_USER=your_email_address
EMAIL_PASS=your_email_password

# CORS: comma-separated origins; supports wildcards like https://*.your-domain.com
CORS_ORIGINS=https://microcourse-frontend-zudk.vercel.app,https://*.vercel.app,http://localhost:3000

# Routing
API_PREFIX=/api
API_VERSION=v1            # optional; unset to disable versioned alias

# Rate limits
RL_WINDOW_MS=900000       # 15 minutes
RL_MAX=100                # per window per IP
RL_LOGIN_WINDOW_MS=600000 # 10 minutes
RL_LOGIN_MAX=10           # per window per IP for /auth/login

# Body size limits (optional)
JSON_LIMIT=1mb
FORM_LIMIT=1mb

# Port (Render sets PORT automatically)
PORT=5000
