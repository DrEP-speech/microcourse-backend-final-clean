{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gradeSubmission.schema.json",
  "title": "GradeSubmission",
  "type": "object",
  "additionalProperties": false,
  "required": ["quizId", "userId", "answers"],
  "properties": {
    "quizId": { "type": "string", "pattern": "^[a-f0-9]{24}$" },
    "userId": { "type": "string", "pattern": "^[a-f0-9]{24}$" },
    "answers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["questionId"],
        "properties": {
          "questionId": { "type": "string", "pattern": "^[a-f0-9]{24}$" },
          "selected": { "type": "array", "items": { "type": "string" } },
          "input": { "oneOf": [ { "type": "string" }, { "type": "number" } ] }
        },
        "allOf": [ { "anyOf": [ { "required": ["selected"] }, { "required": ["input"] } ] } ]
      }
    }
  }
}
