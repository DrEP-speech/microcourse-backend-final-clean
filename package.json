{
  "name": "microcourse-backend-final-clean",
  "version": "1.0.0",
  "private": true,
  "description": "MicroCourse API. Express + Mongo + Redis + OpenAPI + Swagger UI",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch . server.js",
    "check": "node -e \"JSON.parse(require('fs').readFileSync('package.json','utf8'))\" && npm run lint:openapi",
    "lint:openapi": "redocly lint docs/openapi.yaml",
    "bundle:openapi": "redocly bundle docs/openapi.yaml -o docs/openapi.json"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "pino": "^9.2.0",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.2",
    "rate-limiter-flexible": "^3.0.2",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@redocly/cli": "^1.16.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.4",
    "pino-pretty": "^13.1.1"
  }
}
