{
  "name": "microcourse-backend-final-clean",
  "version": "1.0.0",
  "description": "MicroCourse backend (Express, ESM) with CORS allow-list, rate limits, Swagger docs, and cookie-based auth support.",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --watch ./ --ext js,json,yaml --signal SIGTERM server.js",
    "lint": "eslint .",
    "prepare": "node -e \"try{require('fs').mkdirSync('docs',{recursive:true})}catch{}\""
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "yaml": "^2.4.5"
    /* add "mongoose": "^8.x" or any DB libs you use */
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "eslint": "^9.9.0"
  },
  "license": "MIT"
}
