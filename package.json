{
  "name": "microcourse-backend-final-clean",
  "version": "1.0.0",
  "description": "MicroCourse backend (Express/Mongo) with cookies, CORS, rate limits, Swagger",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint:openapi": "redocly lint docs/openapi.yaml",
    "check": "node -e \"JSON.parse(require('fs').readFileSync('package.json','utf8'))\" && npm run lint:openapi"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1",
    "morgan": "^1.10.0",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^4.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "yaml": "^2.4.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@redocly/cli": "^2.0.6",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4"
  },
  "license": "MIT"
}
