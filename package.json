{
  "name": "microcourse-backend-final-clean",
  "version": "1.0.0",
  "private": true,
  "description": "Microcourse backend (auth hardened, smoke-tested)",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed:owner": "node scripts/seed-owner.js",
    "newman:auth": "newman run tools/auth-fixed.postman_collection.json --reporters cli,htmlextra --reporter-htmlextra-export tools/auth-report.html",
    "smoke:auth": "npm run newman:auth",
    "verify": "npm run smoke:auth"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.2"
  },
  "devDependencies": {
    "newman": "^6.2.1",
    "newman-reporter-htmlextra": "^1.23.1",
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
