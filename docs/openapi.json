{
  "openapi": "3.0.3",
  "info": { "title": "MicroCourse API", "version": "1.0.0" },
  "servers": [{ "url": "/api", "description": "Base API" }],
  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "Create user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 6 }
                }
              }
            }
          }
        },
/auth/refresh:
  post:
    tags: [auth]
    summary: Rotate refresh token and issue new access token
    operationId: authRefresh
    description: Requires CSRF header and mc_refresh cookie.
    security:
      - refreshCookieAuth: []
    responses:
      "200":
        description: OK
      "401":
        description: Invalid or missing refresh token

/auth/logout-everywhere:
  post:
    tags: [auth]
    summary: Revoke all user sessions and clear cookies
    operationId: authLogoutEverywhere
    security:
      - cookieAuth: []
      - bearerAuth: []
    responses:
      "200": { description: OK }
      "401": { description: Not authenticated }

        "responses": { "201": { "description": "Created" }, "400": { "description": "Bad Request" } }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" }, "401": { "description": "Invalid" } }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Current user",
        "responses": { "200": { "description": "OK" }, "401": { "description": "Unauthenticated" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  },
  "security": [{ "bearerAuth": [] }]
}
