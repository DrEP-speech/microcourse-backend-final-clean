{
  "info": {
    "name": "Microcourse API",
    "_postman_id": "2e5d5ea8-aaaa-bbbb-cccc-1234567890ab",
    "description": "Named-exports controllers + auth guards",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://microcourse-backend-final-clean.onrender.com" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Healthz",
      "request": { "method": "GET", "url": "{{baseUrl}}/healthz" }
    },
    {
      "name": "Auth / Signup",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/signup",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test+{{$randomInt}}@example.com\",\n  \"password\": \"Passw0rd!{{$randomInt}}\",\n  \"name\": \"Tester {{$randomInt}}\"\n}"
        }
      }
    },
    {
      "name": "Auth / Login",
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "const json = pm.response.json();",
            "if (json?.data?.token) pm.collectionVariables.set('token', json.data.token);"
          ],
          "type": "text/javascript"
        }
      }],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/login",
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}" }
      }
    },
    {
      "name": "Auth / Me",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/auth/me"
      }
    },
    {
      "name": "Badges / List",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/badges" }
    },
    {
      "name": "Badges / Create (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/badges",
        "body": { "mode": "raw", "raw": "{\n  \"key\": \"starter_{{$timestamp}}\",\n  \"name\": \"Starter {{$timestamp}}\"\n}" }
      }
    },
    {
      "name": "Badges / Delete (admin)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{baseUrl}}/api/badges/:id"
      }
    },
    {
      "name": "Badges / Award",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/badges/award",
        "body": { "mode": "raw", "raw": "{\n  \"userId\": \"<USER_ID>\",\n  \"badgeId\": \"<BADGE_ID>\"\n}" }
      }
    },
    {
      "name": "Badges / Sync",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/badges/sync",
        "body": { "mode": "raw", "raw": "{\n  \"userId\": \"<USER_ID>\",\n  \"badgeIds\": [\"<BADGE_ID>\"]\n}" }
      }
    }
  ]
}
